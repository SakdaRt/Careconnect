# ============================================================================
# Careconnect Environment Variables (Example)
# ============================================================================
#
# IMPORTANT:
# 1. Copy this file to .env and fill in actual values
# 2. NEVER commit .env to git
# 3. For Windows development: values work as-is
# 4. For Linux production: update URLs and secrets
# ============================================================================

# ----------------------------------------------------------------------------
# Environment
# ----------------------------------------------------------------------------
NODE_ENV=development
TZ=Asia/Bangkok

# ----------------------------------------------------------------------------
# Backend API (Port 3000)
# ----------------------------------------------------------------------------
PORT=3000

# Database Connection
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=careconnect
DATABASE_USER=careconnect
DATABASE_PASSWORD=careconnect_dev_password

# JWT Authentication
JWT_SECRET=careconnect_jwt_secret_dev_only
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE_MB=10

# Rate Limiting
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_OTP_WINDOW_MS=900000
RATE_LIMIT_OTP_MAX=3
RATE_LIMIT_WEBHOOK_WINDOW_MS=60000
RATE_LIMIT_WEBHOOK_MAX=10
RATE_LIMIT_UPLOAD_WINDOW_MS=3600000
RATE_LIMIT_UPLOAD_MAX=20
RATE_LIMIT_DEFAULT_WINDOW_MS=900000
RATE_LIMIT_DEFAULT_MAX=100

# Webhook Security (Optional)
WEBHOOK_ALLOWED_IPS=127.0.0.1,::1

# Timezone
TZ=Asia/Bangkok

# ----------------------------------------------------------------------------
# Third-party Providers
# ----------------------------------------------------------------------------

VITE_GOOGLE_MAPS_API_KEY=

# Payment Gateway
PAYMENT_PROVIDER=mock
# For production: PAYMENT_PROVIDER=stripe or omise or 2c2p

# SMS OTP
SMS_PROVIDER=mock
# For production: SMS_PROVIDER=twilio or thaibulksms

# KYC
KYC_PROVIDER=mock
# For production: KYC_PROVIDER=sumsub or onfido

# Bank Transfer / Withdrawal
BANK_TRANSFER_PROVIDER=mock
# For production: BANK_TRANSFER_PROVIDER=stripe_payouts or wise

# Email
EMAIL_PROVIDER=mock
EMAIL_FROM=noreply@careconnect.local
# For production:
# EMAIL_PROVIDER=sendgrid or resend
# SENDGRID_API_KEY=your_key_here
# RESEND_API_KEY=your_key_here

# Push Notifications
PUSH_PROVIDER=mock
# For production:
# PUSH_PROVIDER=fcm
# FCM_SERVER_KEY=your_fcm_server_key

# ----------------------------------------------------------------------------
# Mock Provider (Port 4000)
# ----------------------------------------------------------------------------

# Mock Provider Server
MOCK_PROVIDER_BASE_URL=http://mock-provider:4000

# Webhook Configuration
BACKEND_WEBHOOK_URL=http://backend:3000/api/webhooks
WEBHOOK_SECRET=careconnect_webhook_secret_dev

# Mock Behavior (Development Only)
MOCK_PAYMENT_AUTO_SUCCESS=true
MOCK_PAYMENT_SUCCESS_DELAY_MS=3000
MOCK_SMS_OTP_CODE=123456
MOCK_KYC_AUTO_APPROVE=true
MOCK_KYC_APPROVAL_DELAY_MS=5000

# ----------------------------------------------------------------------------
# Frontend (Port 5173)
# ----------------------------------------------------------------------------

# API URLs (accessible from browser)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000
VITE_MOCK_PROVIDER_URL=http://localhost:4000

# ----------------------------------------------------------------------------
# Database Admin Tools (Optional)
# ----------------------------------------------------------------------------

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@careconnect.local
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================================================
# Production Overrides (Linux Server)
# ============================================================================
#
# For production deployment, create .env.production with:
#
# NODE_ENV=production
#
# # Public URLs
# VITE_API_BASE_URL=https://api.careconnect.com/api
# VITE_WS_URL=wss://api.careconnect.com
# BACKEND_WEBHOOK_URL=https://api.careconnect.com/api/webhooks
#
# # Strong Secrets
# JWT_SECRET=<STRONG_RANDOM_SECRET>
# WEBHOOK_SECRET=<STRONG_RANDOM_SECRET>
# DATABASE_PASSWORD=<STRONG_DB_PASSWORD>
#
# # Commercial Providers
# PAYMENT_PROVIDER=stripe
# STRIPE_SECRET_KEY=sk_live_xxxxx
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=xxxxx
# TWILIO_AUTH_TOKEN=xxxxx
# KYC_PROVIDER=sumsub
# SUMSUB_API_KEY=xxxxx
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=xxxxx
# PUSH_PROVIDER=fcm
# FCM_SERVER_KEY=xxxxx
#
# ============================================================================
